{% extends 'Home/base.html.twig' %}

{% block title %}
    {% if people.user != null and app.user.username == people.user.username %}
        {% trans %}Mon profil{% endtrans %}
    {% else %}
        {% trans %}Profil de{% endtrans %} {{ people.firstName }} {{ people.lastName }}
    {% endif %}
{% endblock %}

{% block stylesheets %}
    <link rel="stylesheet" href="{{ asset('css/User/show.css') }}">
{% endblock %}

{% block breadcrumb %}
    <li class="breadcrumb-item">
        <a href="/">{% trans %}Accueil{% endtrans %}</a>
    </li>
    {% if is_granted("ROLE_GESTION") %}
    <li class="breadcrumb-item">
        <a href="{{ path('people_list') }}">{% trans %}Annuaire généraliste{% endtrans %}</a>
    </li>
    {% endif %}
    <li class="breadcrumb-item active" aria-current="page">
        {% if people.user != null and app.user.username == people.user.username %}
            {% trans %}Mon profil{% endtrans %}
        {% else %}
            {% trans %}Profil de{% endtrans %} {{ people.firstName }} {{ people.lastName }}
        {% endif %}
    </li>
{% endblock %}

{% block body %}
    <br>
    <div class="container">
        <div class="row">

            <div class="col-8 col-md-2">
                {{ include('People/_menu-people.html.twig', { show_profile: 'active' }) }}
            </div>

            <div class="col-12 col-md-10">
                <div class="row">
                    <div class="col-10">
                        <h1>
                            {% if people.denomination or people.firstname or people.lastname %}
                                {{ people.denomination ? people.denomination.label : "" }} {{ people.firstname }} {{ people.lastname }}
                            {% else %}
                                {% trans %}Cette personne n'a pas de nom{% endtrans %}
                            {% endif %}
                        </h1>
                        <br>
                    </div>
                    <div class="col-2 text-right">
                        <h2>
                            {% for type in people.types %}
                                {% if not type.isSensible or (type.isSensible and (is_granted('ROLE_GESTION_SENSIBLE') or is_granted('ROLE_ADMIN_SENSIBLE'))) %}
                                    <span
                                        class="badge badge-info"
                                        data-toggle="tooltip"
                                        title="{{ type.description }}"
                                        >
                                        {{ type.label }}
                                    </span>
                                {% endif %}
                            {% endfor %}
                        </h2>
                    </div>
                </div>
                <div class="row">
                    <div class="container">
                        <div class="col styledtable">
                            <h3 class="mt-4 mb-4">{% trans %}Informations de contact{% endtrans %}</h3>
                            <table class="table table-hover">
                                <tbody>
                                    <tr>
                                        <th>{% trans %}Mail{% endtrans %}</th>
                                        <td>
                                        {{ people.emailAddress }}&nbsp;&nbsp;
                                        {{people.isReceivingNewsletter ?
                                            '<span data-toggle="tooltip" title="Reçoit la newsletter" >
                                            <i class="icon ion-md-paper"></i> </span>' : ''
                                        }}
                                        {{people.newsletterDematerialization ?
                                            '<span data-toggle="tooltip" title="Newsletter envoyée sous format dématérialisé" >
                                            <i class="icon ion-md-mail"></i> </span>' : ''
                                         }}
                                        </td>
                                    </tr>
                                    <tr>
                                        <th>{% trans %}Adresse{% endtrans %}</th>
                                        <td>
                                            {% if people.hasNoAddressDefined() %}
                                                {% trans %}Ce membre n'a pas d'adresse enregistrée.{% endtrans %}
                                            {% else %}
                                                {% for address in people.addresses %}
                                                    {{address.line}}
                                                    <br>
                                                    {% if not address.lineTwo is null %}
                                                        {{ address.lineTwo }}<br>
                                                    {% endif %}
                                                    {{address.postalCode}}, {{address.city}}, {{address.country}}
                                                {% endfor %}
                                            {% endif %}
                                        </td>
                                    </tr>
                                    <tr>
                                        <th>{% trans %}Téléphone fixe{% endtrans %}</th>
                                        <td><div class="phone">{{ people.homePhoneNumber }}</div></td>
                                    </tr>
                                    <tr>
                                        <th>{% trans %}Téléphone portable{% endtrans %}</th>
                                        <td><div class="phone">{{ people.cellPhoneNumber }}</div></td>
                                    </tr>
                                    <tr>
                                        <th>{% trans %}Téléphone professionnel{% endtrans %}</th>
                                        <td><div class="phone">{{ people.workPhoneNumber }}</div></td>
                                    </tr>
                                    <tr>
                                        <th>{% trans %}Fax{% endtrans %}</th>
                                        <td><div class="phone">{{ people.workFaxNumber }}</div></td>
                                    </tr>
                                </tbody>
                            </table>
                            <h3 class="mt-4 mb-4">{% trans %}Champs de saisie libre{% endtrans %}</h3>
                            <table class="table table-hover">
                                <tbody>
                                    <tr>
                                        <th>{% trans %}Année de premier contact{% endtrans %}</th>
                                        <td>{{ people.firstContactYear }}</td>
                                    </tr>
                                    <tr>
                                        <th>{% trans %}Observations{% endtrans %}</th>
                                        <td>{{ people.observations}}</td>
                                    </tr>
                                    {% if is_granted("ROLE_GESTION_SENSIBLE") %}
                                    <tr>
                                        <th>{% trans %}Détails médicaux{% endtrans %}</th>
                                        <td>{{ people.sensitiveObservations }}</td>
                                    </tr>
                                    {% endif %}
                                </tbody>
                            </table>
                        </div>
                    </div>
                    <br>
                </div>

                <div class="row mt-3">
                    {% if is_granted("ROLE_GESTION") %}
                        <div class="col-md">
                            <a href="{{ path('people_list') }}" class="btn btn-secondary"><i class="icon ion-md-arrow-back"></i>&nbsp;{% trans %}Retourner à la liste des utilisateurices{% endtrans %}</a>
                        </div>
                    {% endif %}
                    <div class="col-md text-right">
                        <button data-toggle="modal" data-target="#confirmation-modal" class="btn btn-danger">
                            <i class="icon ion-md-trash"></i>&nbsp;{% trans %}Supprimer{% endtrans %} {{ people.firstName }} {{ people.lastName }}
                        </button>
                    </div>
                </div>
            </div>
        </div>

        <div id="confirmation-modal" class="modal fade" tabindex="-1" role="dialog">
            <div class="modal-dialog" role="document">
                <div class="modal-content">
                    <div class="modal-body">
                        <p>{% trans %}Souhaitez-vous réellement supprimer ce profil ?{% endtrans %}</p>
                        <div class="alert alert-warning" role="alert">
                            <i class="icon ion-md-alert"></i>&nbsp;{% trans %}Les données seront supprimées de manière définitive.{% endtrans %}
                        </div>
                    </div>
                    <div class="modal-footer">
                        <div class="col">
                            <button type="button" class="btn btn-secondary" data-dismiss="modal">
                                <i class="icon ion-md-arrow-back"></i>&nbsp;{% trans %}Annuler{% endtrans %}
                            </button>
                        </div>
                        <div class="col text-right">
                            {{ form_start(delete_form) }}
                            <button type="submit" class="btn btn-danger" id="delete_button">
                                <i class="icon ion-md-trash"></i>&nbsp;{% trans %}Supprimer{% endtrans %} {{ people.firstName }} {{ people.lastName }}
                            </button>
                            {{ form_end(delete_form) }}
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
{% endblock %}

{% extends 'Home/base.html.twig' %}

{% block title %}
    {% if people.user != null and app.user.username == people.user.username %}
        {% trans %}Mon profil{% endtrans %}
    {% else %}
        {% trans %}Profil de{% endtrans %} {{ people.firstName }} {{ people.lastName }}
    {% endif %}
{% endblock %}

{% block stylesheets %}
    <link rel="stylesheet" href="{{ asset('css/User/show.css') }}">
{% endblock %}

{% block javascript %}
    {{ encore_entry_script_tags('people_generate_from_year') }}
    {{ encore_entry_script_tags('people_show') }}
{% endblock %}

{% block breadcrumb %}
    <li class="breadcrumb-item">
        <a href="/">{% trans %}Accueil{% endtrans %}</a>
    </li>
    {% if is_granted("ROLE_GESTION") %}
    <li class="breadcrumb-item">
        <a href="{{ path('people_list') }}">{% trans %}Annuaire généraliste{% endtrans %}</a>
    </li>
    {% endif %}
    <li class="breadcrumb-item active" aria-current="page">
        {% if people.user != null and app.user.username == people.user.username %}
            {% trans %}Mon profil{% endtrans %}
        {% else %}
            {% trans %}Profil de{% endtrans %} {{ people.firstName }} {{ people.lastName }}
        {% endif %}
    </li>
{% endblock %}

{% block body %}
    <br>
    <div class="container-fluid">
        <div class="row">
            <div class="col">
                {{ include('People/partials/people_details_page.html.twig', { people: people }) }}

                <div class="row mt-3">
                    {% if is_granted("ROLE_GESTION") %}
                        <div class="col-md">
                            <a href="{{ path('people_list') }}" class="btn btn-secondary"><i class="ri-arrow-left-line"></i>&nbsp;{% trans %}Retourner à la liste des utilisateurices{% endtrans %}</a>
                        </div>
                    {% endif %}
                    <div class="col-md text-right">
                        <button data-toggle="modal" data-target="#confirmation-modal" class="btn btn-danger">
                            <i class="ri-delete-bin-7-fill"></i>&nbsp;{% trans %}Supprimer{% endtrans %} {{ people.firstName }} {{ people.lastName }}
                        </button>
                    </div>
                </div>
            </div>
        </div>

        <div id="confirmation-modal" class="modal fade" tabindex="-1" role="dialog">
            <div class="modal-dialog" role="document">
                <div class="modal-content">
                    <div class="modal-body">
                        <p>{% trans %}Souhaitez-vous réellement supprimer ce profil ?{% endtrans %}</p>
                        <div class="alert alert-warning" role="alert">
                            <i class="ri-error-warning-fill"></i>&nbsp;{% trans %}Les données seront supprimées de manière définitive.{% endtrans %}
                        </div>
                    </div>
                    <div class="modal-footer">
                        <div class="col">
                            <button type="button" class="btn btn-secondary" data-dismiss="modal">
                                <i class="ri-arrow-left-line"></i>&nbsp;{% trans %}Annuler{% endtrans %}
                            </button>
                        </div>
                        <div class="col text-right">
                            {{ form_start(delete_form) }}
                            <button type="submit" class="btn btn-danger" id="delete_button">
                                <i class="ri-delete-bin-7-fill"></i>&nbsp;{% trans %}Supprimer{% endtrans %} {{ people.firstName }} {{ people.lastName }}
                            </button>
                            {{ form_end(delete_form) }}
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
{% endblock %}

{% if is_granted("ROLE_GESTION") %}
    <div class="row">
        <div class="col">
            <a
                {% if member is defined %}
                    href="{{ path('member_edit', { 'id': people.id }) }}"
                {% else %}
                    href="{{ path('people_edit', { 'id': people.id }) }}"
                {% endif %}
                class="btn btn-primary"
            >
                <i class="icon ion-md-create"></i>&nbsp;Éditer ce profil
            </a>
        </div>
        <div class="col">
            <a href="{{ path('donation_new', {'person-id': people.id}) }}" class="btn btn-primary">
                <i class="icon ion-md-cash"></i>&nbsp;Enregistrer un don
            </a>
        </div>
        {% if not hasActiveMembership %}
            <div class="col">
                <a href="{{ path('membership_create', {'person-id': people.id}) }}" class="btn btn-primary">
                    <i class="icon ion-md-filing"></i>&nbsp;Enregistrer une adhésion
                </a>
            </div>
        {% else %}
            <div class="col">
                <button class="btn btn-primary" disabled="disabled" data-toggle="tooltip" title="" data-original-title="Cette personne a déjà une adhésion active">
                    <i class="icon ion-md-filing"></i>&nbsp;Enregistrer une adhésion
                </button>
            </div>
        {% endif %}
    </div>
{% endif %}

{{ form_start(people_edit_form, {'attr': {'id': 'form-edit-people'}}) }}
    <div class="row justify-content-between">
        <div class="col">
            <p>Les champs not√©s avec * sont requis.</p>
        </div>
    </div>
    <div class="row">
        <div class="mb-3 col">
            <div class="p-3 bg-light">
                <div class="row">
                    <div class="form-group col h-100">
                        {{ form_label(people_edit_form.denomination) }} *
                        {{ form_errors(people_edit_form.denomination) }}
                        {{ form_widget(people_edit_form.denomination) }}
                        {{ form_help(people_edit_form.denomination) }}
                    </div>

                    <div class="form-group col h-100">
                        {{ form_label(people_edit_form.firstname) }} *
                        {{ form_errors(people_edit_form.firstname) }}
                        {{ form_widget(people_edit_form.firstname) }}
                        {{ form_help(people_edit_form.firstname) }}
                    </div>

                    <div class="form-group col h-100">
                        {{ form_label(people_edit_form.lastname) }} *
                        {{ form_errors(people_edit_form.lastname) }}
                        {{ form_widget(people_edit_form.lastname) }}
                        {{ form_help(people_edit_form.lastname) }}
                    </div>
                </div>
                <div class="row">
                    <div class="form-group col h-100">
                        {{ form_label(people_edit_form.firstContactYear) }}
                        {{ form_widget(people_edit_form.firstContactYear) }}
                        {{ form_help(people_edit_form.firstContactYear) }}
                    </div>
                </div>
                <div class="row">
                    <div class="form-group col h-100">
                        {{ form_label(people_edit_form.isContact) }}
                        {{ form_widget(people_edit_form.isContact) }}
                    </div>

                    {% if is_granted('ROLE_GESTION_SENSIBLE') or is_granted('ROLE_ADMIN_SENSIBLE') %}
                        <div class="form-group col h-100">
                            {{ form_label(people_edit_form.needHelp) }}
                            {{ form_widget(people_edit_form.needHelp) }}
                        </div>
                    {% endif %}
                </div>
            </div>
        </div>
    </div>
    <div class="row">
        <div class="mb-3 col">
            <div class="p-3 bg-light">
                <div class="row">
                    {% for address in people_edit_form.addresses %}
                        <div class="form-group col h-100 mb-0">
                            {{ form_label(address) }}
                            {{ form_errors(address) }}
                            {{ form_widget(address) }}
                            {{ form_help(address) }}
                        </div>
                    {% endfor %}
                </div>
            </div>
        </div>
    </div>
    <div class="row">
        <div class="mb-3 col">
            <div class="p-3 bg-light">
                <div class="row">
                    <div class="form-group col h-100">
                        {{ form_label(people_edit_form.emailAddress) }}
                        {{ form_widget(people_edit_form.emailAddress) }}
                    </div>
                </div>
                <div class="row">
                    <div class="form-group col h-100">
                        {{ form_label(people_edit_form.isReceivingNewsletter) }}
                        {{ form_widget(people_edit_form.isReceivingNewsletter) }}
                    </div>
                    <div class="form-group col h-100">
                        {{ form_label(people_edit_form.newsletterDematerialization) }}
                        {{ form_widget(people_edit_form.newsletterDematerialization) }}
                    </div>
                </div>
            </div>
        </div>
    </div>
    <div class="row">
        <div class="mb-3 col">
            <div class="p-3 bg-light">
                <div class="row">
                    <div class="form-group col h-100">
                        {{ form_label(people_edit_form.homePhoneNumber) }}
                        {{ form_widget(people_edit_form.homePhoneNumber) }}
                        {{ form_help(people_edit_form.homePhoneNumber) }}
                    </div>

                    <div class="form-group col h-100">
                        {{ form_label(people_edit_form.cellPhoneNumber) }}
                        {{ form_widget(people_edit_form.cellPhoneNumber) }}
                        {{ form_help(people_edit_form.cellPhoneNumber) }}
                    </div>

                    <div class="form-group col h-100">
                        {{ form_label(people_edit_form.workPhoneNumber) }}
                        {{ form_widget(people_edit_form.workPhoneNumber) }}
                        {{ form_help(people_edit_form.workPhoneNumber) }}
                    </div>

                    <div class="form-group col h-100">
                        {{ form_label(people_edit_form.workFaxNumber) }}
                        {{ form_widget(people_edit_form.workFaxNumber) }}
                        {{ form_help(people_edit_form.workFaxNumber) }}
                    </div>
                </div>
            </div>
        </div>
    </div>
    <div class="row">
    <div class="mb-3 col">
        <div class="p-3 bg-light">
            <div class="row">
                <div class="form-group col h-100">
                    {{ form_label(people_edit_form.observations) }}
                    {{ form_widget(people_edit_form.observations) }}
                    {{ form_help(people_edit_form.observations) }}
                </div>
            </div>
            {% if is_granted('ROLE_GESTION_SENSIBLE') %}
                <div class="row">
                    <div class="form-group col h-100">
                        {{ form_label(people_edit_form.sensitiveObservations) }}
                        {{ form_widget(people_edit_form.sensitiveObservations) }}
                        {{ form_help(people_edit_form.sensitiveObservations) }}
                    </div>
                </div>
            {% endif %}
        </div>
    </div>
</div>

    {% do people_edit_form.sensitiveObservations.setRendered %}
    {% do people_edit_form.needHelp.setRendered %}
    {% do people_edit_form.firstContactYear.setRendered %}
{{ form_end(people_edit_form) }}

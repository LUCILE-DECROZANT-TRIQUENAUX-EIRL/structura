{% extends 'Home/base.html.twig' %}

{% block title %}
    {% if member.user != NULL and app.user.username == member.user.username %}
        Mon profil
    {% else %}
        Profil de {{ member.firstName }} {{ member.lastName }}
    {% endif %}
{% endblock %}

{% block stylesheets %}
    <link rel="stylesheet" href="{{ asset('css/User/show.css') }}">
{% endblock %}

{% block breadcrumb %}
    <li class="breadcrumb-item">
        <a href="/">Accueil</a>
    </li>
    {% if is_granted("ROLE_GESTION") %}
        <li class="breadcrumb-item">
            <a href="{{ path('member_list') }}">Liste des adhérent·es</a>
        </li>
    {% endif %}
    <li class="breadcrumb-item active" aria-current="page">
        {% if member.user != NULL and app.user.username == member.user.username %}
            Mon profil
        {% else %}
            Profil de {{ member.firstName }} {{ member.lastName }}
        {% endif %}
    </li>
{% endblock %}

{% block body %}
    <br>
    <div class="container">
        <div class="row">

            <div class="col-8 col-md-2">
                {{ include('Member/_menu-member.html.twig', { show_profile: 'active' }) }}
            </div>

            <div class="col-12 col-md-10">
                <div class="row">
                    <div class="col">
                        <div class="bg-light p-4 mb-4">
                            <h3 class="text-center">
                                {% if member.denomination or member.firstname or member.lastname %}
                                    {{ member.denomination ? member.denomination.label : "" }} {{ member.firstname }} {{ member.lastname }}
                                {% else %}
                                    Ce·tte membre n'a pas de nom
                                {% endif %}
                            </h3>
                            <div class="lead text-center">
                                {% for type in member.types %}
                                    {% if not type.isSensible or (type.isSensible and (is_granted('ROLE_GESTION_SENSIBLE') or is_granted('ROLE_ADMIN_SENSIBLE'))) %}
                                        <span
                                            class="badge badge-info"
                                            data-toggle="tooltip"
                                            title="{{ type.description }}"
                                            >
                                            {{ type.label }}
                                        </span>
                                    {% endif %}
                                {% endfor %}
                            </div>
                        </div>
                    </div>
                </div>
                <div class="row">
                    <div class="col">
                        <div class="bg-light p-4 mb-4">
                            <h4 class="text-center mb-5">
                                Informations de contact
                            </h4>
                            <div class="row">
                                <div class="col text-center">
                                    <strong>
                                        Adresse postale&nbsp;:
                                    </strong>
                                    <br>
                                    {% if member.hasNoAddressDefined() %}
                                        <i>Ce membre n'a pas d'adresse enregistrée.</i>
                                    {% else %}
                                        {% for address in member.addresses %}
                                            {{address.line}}
                                            <br>
                                            {% if not address.lineTwo is null %}
                                                {{ address.lineTwo }}<br>
                                            {% endif %}
                                            {{address.postalCode}}, {{address.city}}, {{address.country}}
                                        {% endfor %}
                                    {% endif %}
                                </div>
                                <div class="col text-center">
                                    <strong>
                                        Adresse mail&nbsp;:
                                    </strong>
                                    <br>
                                    {{ member.emailAddress }}
                                    {% if member.isReceivingNewsletter %}
                                        <span data-toggle="tooltip" title="Abonné-e à la newsletter" >
                                            <i class="icon ion-md-paper"></i>
                                        </span>
                                    {% endif %}
                                    {% if member.newsletterDematerialization %}
                                        <span data-toggle="tooltip" title="Newsletter envoyée sous format dématérialisé" >
                                            <i class="icon ion-md-mail"></i>
                                        </span>
                                    {% endif %}
                                </div>
                                <div class="col-7">
                                    <div class="row">
                                        <div class="col text-center mb-2">
                                            <strong>
                                                Téléphone fixe&nbsp;:
                                            </strong>
                                            <br>
                                            {{ member.displayHomePhoneNumber }}
                                        </div>
                                        <div class="col text-center">
                                            <strong>
                                                Téléphone professionnel&nbsp;:
                                            </strong>
                                            <br>
                                            {{ member.displayWorkPhoneNumber }}
                                        </div>
                                    </div>
                                    <div class="row">
                                        <div class="col text-center mb-2">
                                            <strong>
                                                Téléphone portable&nbsp;:
                                            </strong>
                                            <br>
                                            {{ member.displayCellPhoneNumber }}
                                        </div>
                                        <div class="col text-center">
                                            <strong>
                                                Fax&nbsp;:
                                            </strong>
                                            <br>
                                            {{ member.displayWorkFaxNumber }}
                                        </div>
                                    </div>
                                </div>

                            </div>
                        </div>
                    </div>
                </div>
                <div class="row">
                    <div class="col">
                        <div class="bg-light p-4 mb-4">
                            <h4 class="text-center mb-5">
                                Autres informations
                            </h4>
                            <div class="row">
                                <div class="col-2 text-center">
                                    <strong>
                                        Année de premier contact&nbsp;:
                                    </strong>
                                    <br>
                                    {{ member.firstContactYear }}
                                </div>
                                <div class="col text-center">
                                    <strong>
                                        Observations&nbsp;:
                                    </strong>
                                    <br>
                                    {{ member.observations}}
                                </div>
                                {% if is_granted("ROLE_GESTION_SENSIBLE") %}
                                    <div class="col text-center">
                                        <strong>
                                            Détails médicaux&nbsp;:
                                        </strong>
                                        <br>
                                        {{ member.sensitiveObservations }}
                                    </div>
                                {% endif %}
                            </div>
                        </div>
                    </div>
                </div>
                <div class="row mt-3">
                    {% if is_granted("ROLE_GESTION") %}
                        <div class="col-md">
                            <a href="{{ path('member_list') }}" class="btn btn-secondary"><i class="icon ion-md-arrow-back"></i>&nbsp;Retourner à la liste des utilisateurices</a>
                        </div>
                    {% endif %}
                    <div class="col-md text-right">
                        <button data-toggle="modal" data-target="#confirmation-modal" class="btn btn-danger">
                            <i class="icon ion-md-trash"></i>&nbsp;Supprimer {{ member.firstName }} {{ member.lastName }}
                        </button>
                    </div>
                </div>
            </div>
        </div>

        <div id="confirmation-modal" class="modal fade" tabindex="-1" role="dialog">
            <div class="modal-dialog" role="document">
                <div class="modal-content">
                    <div class="modal-body">
                        <p>Souhaitez-vous réellement supprimer ce profil ?</p>
                        <div class="alert alert-warning" role="alert">
                            <i class="icon ion-md-alert"></i>&nbsp;Les données seront supprimées de manière définitive.
                        </div>
                    </div>
                    <div class="modal-footer">
                        <div class="col">
                            <button type="button" class="btn btn-secondary" data-dismiss="modal">
                                <i class="icon ion-md-arrow-back"></i>&nbsp;Annuler
                            </button>
                        </div>
                        <div class="col text-right">
                            {{ form_start(delete_form) }}
                            <button type="submit" class="btn btn-danger" id="delete_button">
                                <i class="icon ion-md-trash"></i>&nbsp;Supprimer {{ member.firstName }} {{ member.lastName }}
                            </button>
                            {{ form_end(delete_form) }}
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
    {% endblock %}

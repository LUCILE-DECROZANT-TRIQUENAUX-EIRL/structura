{% extends 'Home/base.html.twig' %}

{% block title %}{% trans %}Connexion{% endtrans %}{% endblock %}

{% block breadcrumb %}
    <li class="breadcrumb-item" aria-current="page">
        <a href="/">{% trans %}Accueil{% endtrans %}</a>
    </li>
    <li class="breadcrumb-item active" aria-current="page">{% trans %}Connexion{% endtrans %}</li>
{% endblock %}

{% block body %}
    <div class="container">
        <div class="row">
            <div class="col">
                <p class="text-center lead">
                    {% trans %}Bienvenue sur la base de données de l'association{% endtrans %} <strong>{% trans %}Huntington Avenir{% endtrans %}</strong>.
                </p>
                <p class="text-center lead">
                    {% trans %}Pour accéder au logiciel, identifiez-vous{% endtrans %}
                </p>
            </div>
        </div>
        <div class="row">
            <div class="col-md-4"></div>
            <div class="col-md-4 text-center">
                <form action="{{ path('login') }}" method="post">
                    {% if error %}
                        <div class="alert alert-danger">
                            {{ error.messageKey|trans(error.messageData, 'security') }}
                        </div>
                    {% endif %}
                    <div class="form-group">
                        <input
                            type="text"
                            class="form-control"
                            id="username"
                            name="username"
                            placeholder="{% trans %}Nom d'utilisateurice{% endtrans %}"
                            value="{% if lastusername is defined %}{{ lastusername }}{% endif %}"
                        >
                    </div>
                    <div class="form-group">
                        <input type="password"
                            class="form-control"
                            id="password"
                            name="password"
                            autocomplete="current-password"
                            placeholder="{% trans %}Mot de passe{% endtrans %}"
                        >
                    </div>
                    <input
                        type="hidden"
                        name="_csrf_token"
                        value="{{ csrf_token('authenticate') }}"
                    >
                    <button
                        type="submit"
                        class="btn btn-primary center-block"
                    >
                        {% trans %}Connexion{% endtrans %}
                    </button>
                </form>
            </div>
            <div class="col-md-4"></div>
        </div>
    </div>

{% endblock %}

{% block stylesheets %}
{% endblock %}

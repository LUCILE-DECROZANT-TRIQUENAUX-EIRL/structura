{% extends 'Home/base.html.twig' %}

{% block title %}{% trans %}Modifier mon pseudonyme{% endtrans %}{% endblock %}

{% block javascript %}
    {{ encore_entry_script_tags('user_edit') }}
{% endblock %}

{% block stylesheets %}
    <link rel="stylesheet" href="{{ asset('css/User/edit.css') }}">
{% endblock %}

{% block breadcrumb %}
    <li class="breadcrumb-item">
        <a href="/">{% trans %}Accueil{% endtrans %}</a>
    </li>
    <li class="breadcrumb-item">
        <a href="{{ path('profile_show', { 'id': user.id }) }}">
            {% trans %}Mon profil{% endtrans %}
        </a>
    </li>
    <li class="breadcrumb-item active" aria-current="page">
        {% trans %}Modifier mon pseudonyme{% endtrans %}
    </li>
{% endblock %}

{% block body %}
<br>
<div class="container">
    <div class="row">

    <div class="col-8 col-md-2">
        {{ include('Profile/_menu-edit-profile.html.twig', { pseudonym: 'active' }) }}
    </div>

        <div class="col-12 col-md-10">
            <div class="row">
                <div class="col">
                    <h2>
                        {% trans %}Modifier mon pseudonyme{% endtrans %}
                    </h2>
                </div>
            </div>

            <div class="mt-4 row">
                <div class="col-2">
                    <img
                        class="img-thumbnail"
                        src="{{ asset('images/placeholder-personne.jpg') }}"
                        alt="Emplacement pour l'avatar"
                        data-toggle="tooltip"
                        title="{% trans %}Work in progress...{% endtrans %}"
                        >
                </div>
                <div class="col-10 pt-4">
                    {{ form_start(edit_form, {'attr': {'id': 'form-edit-userprofile'}}) }}
                    <div class="form-group">
                        <label for="app_user_username" class="required">{% trans %}Pseudonyme{% endtrans %}</label>
                        {{ form_widget(edit_form.username) }}
                    </div>
                    <div class="form-group">
                        {{ form_row(edit_form._token) }}
                        {{ form_end(edit_form, {'render_rest': false}) }}
                    </div>
                </div>
            </div>
            <div class="row mt-4">
                <div class="col">
                    <a href="{{ path('people_show', { 'id': people.id }) }}" class="btn btn-secondary">
                        <i class="icon ion-md-arrow-back"></i>&nbsp;{% trans %}Retourner au profil{% endtrans %}
                    </a>
                </div>
                <div class="col text-right">
                    <button
                        id="edit-sensible-submit-button"
                        type="submit"
                        form="form-edit-userprofile"
                        class="btn btn-primary"
                        >
                        <i class="icon ion-md-save"></i>&nbsp;{% trans %}Enregistrer les modifications{% endtrans %}
                    </button>
                </div>
            </div>
        </div>
    </div>
</div>

{% endblock %}
